@model Rental.Models.Order
<h1> Thank you </h1>
<h5 class="mt-5">Order Id:@Model.Id</h5>
@if (Model.OrderItems.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                var itemTotal = item.Product.Price * item.Quantity;
                <tr>
                    <td>
                        <a class="a-cleanup" asp-controller="Store" asp-action="Details" asp-route-id="@item.Id"><img src="@item.Product.ImageUrl" style="height: 4em"></a>
                    </td>
                    <td>
                        <a class="a-cleanup" asp-controller="Store" asp-action="Details" asp-route-id="@item.Id">@item.Product.Name</a>
                    </td>
                    <td>
                        @itemTotal.ToString("c")
                    </td>
                    <td>

                        @item.Quantity

                    </td>

                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td></td>
                <td class="text-right">
                    <strong>Total:</strong>
                </td>
                <td>
                    <strong>@Model?.OrderTotal.ToString("c")</strong>
                </td>
                <td></td>

            </tr>
        </tfoot>
    </table>
}
